@model IEnumerable<POS.Models.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Customer List</li>
                    </ol>
                </nav>
                <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-xs btn-info float-right" asp-controller="Customer" asp-action="Create"><i class="fa fa-plus"></i>&nbsp;Create</a><br />
                        <br />

                        <table class="table table-striped">
                            <thead>
                                <tr style="background-color:burlywood">
                                    <th>Cust Code</th>
                                    <th>Cust Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>LoyalityPoint</th>
                                    <th class="text-warning text-center">Edit</th>
                                    <th>Delete</th>
                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var c in Model)
                                {
                                    <tr>
                                        <td>@c.Code</td>
                                        <td>@c.Name</td>
                                        <td>@c.Address</td>
                                        <td>@c.Email</td>
                                        <td>@c.Contact</td>
                                        <td>@c.LoyalityPoint</td>
                                        
                                       
                                        <td>
                                            <a class="text-primary btn btn-primary" asp-action="Edit" asp-route-id="@c.Id"><i class="fa fa-edit"></i>Edit</a>
                                        </td>
                                        <td><a class="text-danger btn btn-danger" asp-action="Delete" asp-route-id="@c.Id"><i class="fa fa-trash"></i>Delete</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

