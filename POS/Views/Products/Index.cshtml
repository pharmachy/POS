@model IEnumerable<POS.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Product List</li>
                    </ol>
                </nav>
                <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-success" asp-controller="Products" asp-action="Create"><i class="fa fa-plus"></i>&nbsp;Add</a><br />
                        <br />
                        <table class="table table-striped" id="grid">
                            <thead>
                                <tr style="background-color:burlywood">
                                    <th>Product Name</th>
                                    <th>Company</th>
                                    <th>SubCategory</th>
                                    <th>BrandModel</th>
                                    <th>Unit</th>
                                    @*<th>Product Image</th>*@
                                    <th>Description </th>
                                    <th class="text-warning text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id">
                                                @item.ProductName
                                            </a>
                                        </td>
                                        <td>@Html.DisplayFor(i => item.Company.Company_Name)</td>
                                        <td>@Html.DisplayFor(i => item.SubCategory.Name)</td>
                                        <td>@Html.DisplayFor(i => item.BrandModel.Name)</td>
                                        <td>@Html.DisplayFor(i => item.Unit.Name)</td>
                                        @*<td>
                                            <img class="rounded-circle" style="width:10px; height:10px" alt="image" src="@Url.Content(item.ProductImage)" />
                                        </td>*@
                                        <td>@Html.DisplayFor(i => item.Description)</td>
                                        <td>
                                            <a class="text-primary btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                            <a class="text-success btn btn-info" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-sliders"></i></a>
                                            <a class="text-danger btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>$(document).ready(function () {
            $('#grid').DataTable();
        });</script>
}
