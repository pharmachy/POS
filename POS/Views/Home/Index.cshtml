@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <section class="content">
        <!-- Small boxes (State box) -->
        <div class="row">
            <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3">
                <div>
                    <img src="~/images/Purchase.jpeg" style="width:100%" />
                </div>
                <div class="small-box bg-info" style="background-color:#ff0000">
                    <a href="/Purchase/Index" class="small-box-footer">
                        <h4 style="text-align:center">Total Purchase: @ViewBag.SumPurchase</h4>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3">
                <div>
                    <img src="~/images/sale (2).jpeg" style="width:100%" />
                </div>
                <div class="small-box bg-danger" style="background-color:#00ff90">
                    <a href="/Sales/Index" class="small-box-footer">
                        <h4 style="text-align:center">Total Sales: @ViewBag.Sale </h4>
                    </a>
                </div>
            </div>
            <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3">
                <!-- small box -->
                <div>
                    <img src="~/images/p_Due.jpeg" style="width:100%" />
                </div>
                <div class="small-box bg-info " style="background-color:#ffd800">
                    <a href="#" class="small-box-footer">
                        <h4 style="text-align:center">Purchase Due</h4>
                    </a>
                </div>

            </div>
            <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3">
                <div>
                    <img src="~/images/In_due.jpeg" style="width:100%" ;height="50%" />
                </div>
                <div class="small-box btn-default" style="background-color:#6495ED">
                    <a href="#" class="small-box-footer">
                        <h4 style="text-align:center"><b>Invoice Due</b></h4>
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

