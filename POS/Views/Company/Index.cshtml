@model IEnumerable<POS.Models.Company>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Manufacturer List</li>
                    </ol>
                </nav>
                <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <div style="text-align:right">
                            <a class="btn btn-info" asp-controller="Company" asp-action="Create"><i class="fa fa-plus"></i></a><br />
                        </div>                     

                        <table class="table table-striped" id="grid">
                            <thead>
                                <tr style="background-color:#0094ff;text-align:center">
                                    <th>Manufacturer Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Website</th>
                                    <th>Address</th>
                                    <th style="background-color:aquamarine">Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Company_Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Website</td>
                                        <td>@item.Address</td>
                                        <td>
                                            <a class="text-primary btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                            <a class="text-danger btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
$(document).ready(function () {
            $('#grid').DataTable();
        });</script>
}
