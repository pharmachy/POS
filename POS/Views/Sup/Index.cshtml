@model IEnumerable<POS.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb" style="background-color:#ff6a00">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Supplier List</li>
                    </ol>
                </nav>
                <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-success" asp-controller="Sup" asp-action="Create"><b><i class="fa fa-plus"></i>&nbsp;</b></a><br />
                        <br />

                        <table class="table table-striped" id="grid">
                            <thead>
                                <tr style="background-color:#0094ff">
                                    <th>SL</th>
                                    <th> Name</th>
                                    <th> Address Line 1</th>
                                    <th> Address Line 2</th>
                                    <th> Contact</th>
                                    <th> Email</th>
                                    <th> Contact Person</th>
                                    <th>CP Phone</th>
                                    <th>CP Email</th>
                                    <th>CP Address</th>
                                    <th style="background-color:yellow">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Address2</td>
                                        <td>@item.Contact</td>
                                        <td>@item.Email</td>
                                        <td>@item.ContactPerson</td>
                                        <td>@item.Phone</td>
                                        <td>@item.CEmail</td>
                                        <td>@item.CAddress</td>
                                        <td>
                                            <a class="text-primary btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                            <a class="text-danger btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>$(document).ready(function () {
            $('#grid').DataTable();
        });</script>
}


