@model POS.Models.SubCategory

@{
    ViewData["Title"] = "Update";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">SubCategory List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Update Sub Category</li>
                </ol>
            </nav>
            <br /><br />
                  <form asp-action="Edit" enctype="multipart/form-data">
                      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                      <input type="hidden" asp-for="Id" />

                      <div class="row">
                          <div class="form-group col-md-2">
                              <label asp-for="Code"></label>
                          </div>
                          <div class="form-group col-md-3">
                              <input asp-for="Code" class=" form-control" placeholder="Code" />
                              <span asp-validation-for="Code" class="text-danger"></span>
                          </div>
                          <div class="col-md-2"></div>
                      </div>
                      <div class="row">
                          <div class="form-group col-md-2">
                              <label asp-for="Name"></label>
                          </div>
                          <div class="form-group col-md-3">
                              <input asp-for="Name" class=" form-control" placeholder="Name" />
                              <span asp-validation-for="Name" class="text-danger"></span>
                          </div>
                          <div class="col-md-2"></div>
                      </div>
                      <div class="row">
                          <div class="form-group col-md-2">
                              <label asp-for="CategoryId"></label>
                          </div>
                          <div class="form-group col-md-3">
                              <input asp-for="CategoryId" class=" form-control" placeholder="CategoryId" />
                              <span asp-validation-for="CategoryId" class="text-danger"></span>
                          </div>
                          <div class="col-md-2"></div>
                      </div>

                      <div class="form-group">
                          <input type="submit" value="Update" class="btn btn-success" />
                          <a asp-action="Index" class="btn btn-info"><i class="fa fa-backward"></i>&nbsp; Back</a>
                      </div>
                  </form>

        </div>
        <div>
        </div>
    </div>
</div>


